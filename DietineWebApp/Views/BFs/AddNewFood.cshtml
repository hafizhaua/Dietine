@model DietineWebApp.Models.Food

@{
    ViewData["Title"] = "Create";
}

<h4>Add New Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewFood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaloriePerOunce" class="control-label"></label>
                <input asp-for="CaloriePerOunce" class="form-control" />
                <span asp-validation-for="CaloriePerOunce" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SeeList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

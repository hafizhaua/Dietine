@{
    ViewData["Title"] = "Home Page";
}

<!-- Header -->
<header id="header" class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="text-container">
                    <h1 class="h1-large">Schedule your meal and have days in fine fettle</h1>
                    <p class="p-large">Dietine helps you to manage your daily meal plan.</p>
                    <a class="btn-solid-lg" asp-controller="MealPlans" asp-action="Index">Schedule it now</a>
                </div> <!-- end of text-container -->
            </div> <!-- end of col -->
            <div class="col-lg-7">
                <div class="image-container">
                    <img class="img-fluid" src="images/header.png" style="width:600px;" alt="alternative">
                </div> <!-- end of image-container -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of header -->
<!-- end of header -->
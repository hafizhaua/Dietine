@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<!-- Header -->
<header class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-xl-10 offset-xl-1">
                <h1 class="text-center">Register</h1>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->

<!-- Basic -->
<div class="ex-form-1 pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3">
                <div class="text-box mt-5 mb-5">

                    <!-- Sign Up Form -->
                    <form id="signUpForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@
                        <div class="form-group">
                            <input asp-for="Input.Email" type="email" class="form-control-input" id="email" required>
                            <label asp-for="Input.Email" class="label-control" for="email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" type="password" class="form-control-input" id="password" required>
                            <label asp-for="Input.Password" class="label-control" for="password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control-input" required />
                            <label asp-for="Input.ConfirmPassword" class="label-control">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control-submit-button">Sign Up</button>
                        </div>
                    </form>
                    <!-- end of sign up form -->

                </div> <!-- end of text-box -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of ex-basic-1 -->
<!-- end of basic -->


